{% extends 'base_admin.html.twig' %}

{% block title %}Liste des rôles{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">Liste des rôles</h1>
        <a href="{{ path('app_role_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau rôle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.id }}</td>
                    <td>{{ role.roleName }}</td>
                    <td>
                        <a href="{{ path('app_role_show', {'id': role.id}) }}" class="btn btn-sm btn-outline-info me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">Aucun rôle trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
