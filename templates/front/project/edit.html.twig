{% extends 'base_front.html.twig' %}

{% block title %}Modifier le projet{% endblock %}

{% block body %}
<div class="container mt-5">

    <!-- Header avec titre et actions -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 m-0 page-title">
            <i class="fa-solid fa-pen-to-square me-2"></i>
            Modifier le projet
        </h1>

        <div class="d-flex gap-2">
            <a href="{{ path('front_project_index') }}" class="btn btn-sm btn-glass-project">
                <i class="fa-solid fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <!-- Carte formulaire -->
    <div class="project-card">
        <div class="card-header">
            <h5 class="project-title">
                <i class="fa-solid fa-file-pen me-2"></i>
                Informations du projet : {{ project.projectName }}
            </h5>
        </div>

        <div class="project-form mt-3">
            {{ include('front/project/_form.html.twig', {'button_label': 'Mettre Ã  jour'}) }}
        </div>

        <div class="project-actions mt-4 d-flex justify-content-between">
            <a href="{{ path('front_project_index') }}" class="btn btn-sm btn-glass-project">
                <i class="fa-solid fa-times"></i> Annuler
            </a>
            {{ include('front/project/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}