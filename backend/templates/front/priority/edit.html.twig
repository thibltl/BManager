{% extends 'base_front.html.twig' %}

{% block title %}Modifier la priorité{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h1 class="h4 mb-0">Modifier la priorité</h1>
        </div>
        <div class="card-body">
            {{ include('priority/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_priority_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            {{ include('priority/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
