{% extends 'base_front.html.twig' %}

{% block body %}

<!-- Bloc projets -->
<div class="dashboard-block mb-4">
    <h2 class="block-title">üóÇÔ∏è Mes projets</h2>
    <div class="row">
        {% for project in projects %}
            <div class="col-md-4 mb-4">
                <a href="{{ path('front_project_show', {id: project.id}) }}" class="card project-card text-decoration-none">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.projectName }}</h5>
                    </div>
                </a>
            </div>
        {% else %}
            <p>Aucun projet enregistr√©.</p>
        {% endfor %}
    </div>
</div>

<!-- Bloc graphique moderne -->
<div class="chart-block-modern mb-5">
    <h2 class="block-title">üìä Suivi des t√¢ches par projet</h2>
    <canvas id="tasksByProjectChart" height="120"></canvas>
</div>

<!-- Tableau des t√¢ches par utilisateur -->
<div class="dashboard-block mb-5">
    <h2 class="block-title">üë• T√¢ches par utilisateur</h2>

    <div class="table-responsive">
        <table class="table user-task-table">
            <thead>
                <tr>
                    <th>Utilisateur</th>
                    <th>En cours</th>
                    <th>En attente</th>
                    <th>Termin√©es</th>
                    <th>En retard</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>

                {% for user in users %}
                    {% set enCours = 0 %}
                    {% set enAttente = 0 %}
                    {% set terminee = 0 %}
                    {% set enRetard = 0 %}

                    {% for task in tasks %}
                        {% if user.tasks.contains(task) %}
                            {% if task.taskStatus.statusName == 'En cours' %}
                                {% set enCours = enCours + 1 %}
                            {% elseif task.taskStatus.statusName == 'En attente' %}
                                {% set enAttente = enAttente + 1 %}
                            {% elseif task.taskStatus.statusName == 'Termin√©e' %}
                                {% set terminee = terminee + 1 %}
                            {% elseif task.taskStatus.statusName == 'En retard' %}
                                {% set enRetard = enRetard + 1 %}
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                    {% set total = enCours + enAttente + terminee + enRetard %}

                    <tr>
                        <td><strong>{{ user.name }}</strong></td>
                        <td><span class="badge badge-en-cours">{{ enCours }}</span></td>
                        <td><span class="badge badge-en-attente">{{ enAttente }}</span></td>
                        <td><span class="badge badge-terminee">{{ terminee }}</span></td>
                        <td><span class="badge badge-en-retard">{{ enRetard }}</span></td>
                        <td><strong>{{ total }}</strong></td>
                    </tr>

                {% else %}
                    <tr><td colspan="6">Aucun utilisateur trouv√©.</td></tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
const projectsData = {{ projectsData|json_encode|raw }};

const labels = Object.keys(projectsData);

const enCours = labels.map(p => projectsData[p]['En cours']);
const terminee = labels.map(p => projectsData[p]['Terminee']);
const enRetard = labels.map(p => projectsData[p]['En retard']);
const enAttente = labels.map(p => projectsData[p]['En attente']);

const ctx = document.getElementById('tasksByProjectChart').getContext('2d');

new Chart(ctx, {
    type: 'bar',
    data: {
        labels: labels,
        datasets: [
            { label: 'En cours', data: enCours, backgroundColor: 'rgba(11, 92, 255, 0.6)', borderRadius: 10 },
            { label: 'Termin√©e', data: terminee, backgroundColor: 'rgba(25, 135, 84, 0.6)', borderRadius: 10 },
            { label: 'En retard', data: enRetard, backgroundColor: 'rgba(176, 0, 32, 0.6)', borderRadius: 10 },
            { label: 'En attente', data: enAttente, backgroundColor: 'rgba(255, 193, 7, 0.6)', borderRadius: 10 }
        ]
    },
    options: {
        responsive: true,
        scales: {
            y: {
                min: 0,
                max: 10,
                ticks: {
                    stepSize: 1,
                    color: document.body.classList.contains('dark-mode') ? '#fff' : '#000'
                }
            },
            x: {
                ticks: {
                    color: document.body.classList.contains('dark-mode') ? '#fff' : '#000'
                }
            }
        }
    }
});
</script>

{% endblock %}
