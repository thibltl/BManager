{% extends 'base_front.html.twig' %}

{% block body %}
<!-- Bloc projets -->
<div class="dashboard-block mb-4">
    <h2 class="block-title">üóÇÔ∏è Mes projets</h2>
    <div class="row">
        {% for project in projects %}
            <div class="col-md-4 mb-4">
                <!-- Carte projet cliquable -->
                <a href="{{ path('front_project_show', {id: project.id}) }}" class="card project-card text-decoration-none">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.projectName }}</h5>
                    </div>
                </a>
            </div>
        {% else %}
            <p>Aucun projet enregistr√©.</p>
        {% endfor %}
    </div>
</div>

<!-- Bloc horizontal : t√¢ches √† gauche, utilisateurs √† droite -->
<div class="row">
    <!-- Bloc t√¢ches -->
    <div class="col-md-6">
        <div class="task-sidebar-block">
            <h2 class="block-title">‚úÖ Mes T√¢ches</h2>
            <ul class="nav flex-column task-nav">
                {% for task in tasks %}
                    <li class="nav-item mb-2">
                        <div class="nav-link task-item d-flex justify-content-between align-items-center
                            {% if task.taskStatus %}
                                {% if task.taskStatus.statusName == 'En cours' %} task-en-cours
                                {% elseif task.taskStatus.statusName == 'En attente' %} task-en-attente
                                {% elseif task.taskStatus.statusName == 'Termin√©e' %} task-terminee
                                {% elseif task.taskStatus.statusName == 'En retard' %} task-en-retard
                                {% else %} task-sans-statut
                                {% endif %}
                            {% else %}
                                task-sans-statut
                            {% endif %}
                        ">
                            <div>
                                <strong>{{ task.taskTitle }}</strong><br>
                                <small class="text-muted">√âch√©ance : {{ task.taskDueDate|date('d/m/Y') }}</small>
                            </div>
                            <span class="badge 
                                {% if task.taskStatus %}
                                    {% if task.taskStatus.statusName == 'En cours' %} badge-en-cours
                                    {% elseif task.taskStatus.statusName == 'En attente' %} badge-en-attente
                                    {% elseif task.taskStatus.statusName == 'Termin√©e' %} badge-terminee
                                    {% elseif task.taskStatus.statusName == 'En retard' %} badge-en-retard
                                    {% else %} badge-sans-statut
                                    {% endif %}
                                {% else %}
                                    badge-sans-statut
                                {% endif %}
                            ">
                                {{ task.taskStatus ? task.taskStatus.statusName : 'Sans statut' }}
                            </span>
                        </div>
                    </li>
                {% else %}
                    <li class="nav-item">Aucune t√¢che enregistr√©e.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Bloc utilisateurs -->
    <div class="col-md-1">
        <div class="users-block mb-4">
            <h2 class="block-title">üë• Mes utilisateurs</h2>
            <div class="row">
                {% for user in users %}
                    <div class="col-md-6 mb-4">
                        <!-- Carte utilisateur cliquable -->
                        <a href="{{ path('user_show', {id: user.id}) }}" class="card user-card text-decoration-none">
                            <div class="card-body">
                                <h4 class="card-title">{{ user.name }}</h4>
                                <h5 class="card-title">
                                    {% for role in user.roles %}
                                        <span class="badge badge-role">{{ role }}</span>
                                    {% endfor %}
                                </h5>

                                
                            </div>
                        </a>
                    </div>
                {% else %}
                    <p>Aucun utilisateur enregistr√©.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
