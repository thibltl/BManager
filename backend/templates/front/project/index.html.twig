{% extends 'base_front.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="d-flex align-items-center justify-content-between mb-4 gap-3">

        <h1 class="h4 m-0 page-title">Mes projets en cours</h1>

        <div class="glass-radio-group" style="flex-shrink: 0;">
            <input type="radio" name="filter" id="filter-all" checked>
            <label class="d-flex" for="filter-all">Tous</label>

            <input type="radio" name="filter" id="filter-recent">
            <label class="d-flex" for="filter-recent">R√©cents</label>

            <input type="radio" name="filter" id="filter-atoz">
            <label class="d-flex" for="filter-atoz">A ‚Üí Z</label>

            <div class="glass-glider"></div>
        </div>

        <a href="{{ path('front_project_new') }}" class="btn btn-primary btn-glass-project flex-shrink-0">
            <i class="bi bi-plus-circle"></i> Nouveau projet
        </a>
    </div>

    <div class="projects-grid">
        {% for project in projects %}
            <div class="project-card">
                <div class="card-header">
                    <h5 class="project-title">{{ project.projectName }}</h5>
                    <span class="project-date">
                        {{ project.projectCreatedAt ? project.projectCreatedAt|date('d/m/Y') : '' }}
                    </span>
                </div>

                <p class="project-desc">{{ project.projectDesc }}</p>

                <div class="project-tasks">
                    <strong>T√¢ches :</strong>
                    {% if project.getTasks() is not empty %}
                        <div class="kanban-board">
                            {% for status in ['En cours', 'Terminee', 'En attente', 'En retard'] %}
                                {% set statusClass = '' %}
                                {% set statusKey = status|lower %}
                                {% if 'cours' in statusKey %}
                                    {% set statusClass = 'status-en-cours' %}
                                {% elseif 'termine' in statusKey %}
                                    {% set statusClass = 'status-termine' %}
                                {% elseif 'retard' in statusKey %}
                                    {% set statusClass = 'status-retard' %}
                                {% elseif 'attente' in statusKey %}
                                    {% set statusClass = 'status-en-attente' %}
                                {% endif %}

                                <div class="kanban-column"
                                     data-status="{{ status }}"
                                     data-project-id="{{ project.id }}">

                                    <div class="kanban-title {{ statusClass }}">{{ status }}</div>

                                    <div class="tasks-list">
                                        {% set tasks = [] %}
                                        {% for task in project.getTasks() %}
                                            {% if task.getTaskStatus() and task.getTaskStatus().statusName == status %}
                                                {% set tasks = tasks|merge([task]) %}
                                            {% endif %}
                                        {% endfor %}

                                        {% if tasks is not empty %}
                                            {% for task in tasks %}
                                                <div class="task-card"
                                                     data-task-id="{{ task.id }}"
                                                     data-project-id="{{ project.id }}">

                                                    <div class="task-header drag-handle" title="Glisser pour d√©placer">
                                                        <a href="{{ path('front_tasks_show', {'id': task.id}) }}" class="task-title-link">
                                                            <strong class="task-title">{{ task.taskTitle }}</strong>
                                                        </a>
                                                        {% if task.taskDueDate %}
                                                            <span class="task-date">{{ task.taskDueDate|date('d/m/Y') }}</span>
                                                        {% endif %}
                                                    </div>

                                                    {% if task.getTaskPriority() %}
                                                        {% set priorityName = task.getTaskPriority().getPriorityName() %}
                                                        {% set priorityMap = {
                                                            'Tres faible': 'tres-faible',
                                                            'Faible': 'faible',
                                                            'Modere': 'modere',
                                                            'Eleve': 'eleve',
                                                            'Tres eleve': 'tres-eleve'
                                                        } %}
                                                        {% set priorityClass = priorityMap[priorityName]|default('') %}
                                                        <span class="priority-badge {{ priorityClass ? 'priority-' ~ priorityClass : '' }}">
                                                            {{ priorityName }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            {% endfor %}
                                        {% else %}
                                            <p class="text-muted">Aucune t√¢che</p>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <span class="text-muted">Aucune t√¢che</span>
                    {% endif %}
                </div>

                <div class="project-actions mt-3">

                    <a href="{{ path('front_project_show', {'id': project.id}) }}" class="btn btn-sm btn-outline-light me-2">
                        <i class="bi bi-eye"></i> Voir
                    </a>

                    {% if project.users.contains(app.user) %}
                        <a href="{{ path('front_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-outline-info me-2">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>

                        {{ include('front/project/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p class="text-muted text-center">Aucun projet trouv√©</p>
        {% endfor %}
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.tasks-list').forEach(list => {
        Sortable.create(list, {
            group: 'kanban',
            animation: 150,
            handle: '.drag-handle',
            draggable: '.task-card',
            ghostClass: 'drag-ghost',

            onAdd: function (evt) {
                const item = evt.item;

                const taskProjectId = item.dataset.projectId;
                const targetProjectId = evt.to.closest('.kanban-column').dataset.projectId;

                // üîí V√©rification : m√™me projet ?
                if (taskProjectId !== targetProjectId) {
                    evt.from.insertBefore(item, evt.from.children[evt.oldIndex] || null);
                    alert("Impossible de d√©placer une t√¢che vers un autre projet.");
                    return;
                }

                const taskId = item.dataset.taskId;
                const newStatus = evt.to.closest('.kanban-column').dataset.status;

                fetch(`/front/tasks/${taskId}/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ status: newStatus })
                })
                .then(res => {
                    if (!res.ok) throw new Error('HTTP ' + res.status);
                    return res.json();
                })
                .then(data => {
                    console.log('Statut mis √† jour :', data);
                    window.location.reload();
                })
                .catch(err => {
                    evt.from.insertBefore(item, evt.from.children[evt.oldIndex] || null);
                    alert('Erreur lors de la mise √† jour');
                });
            }
        });
    });
});
</script>

{% endblock %}
