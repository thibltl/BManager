{% extends 'base_front.html.twig' %}

{% block title %}Modifier le projet{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="project-card">
        <div class="card-header">
            <h5 class="project-title">Modifier : {{ project.projectName }}</h5>
        </div>

        {# ðŸ”’ Formulaire visible uniquement si l'utilisateur est membre du projet #}
        {% if project.users.contains(app.user) %}
            <div class="project-form mt-3">
                {{ include('front/project/_form.html.twig') }}
            </div>
        {% else %}
            <div class="alert alert-danger mt-3">
                Vous n'avez pas les droits nÃ©cessaires pour modifier ce projet.
            </div>
        {% endif %}

        <div class="project-actions mt-4 d-flex justify-content-between">
            <a href="{{ path('front_project_index') }}" class="btn btn-sm btn-glass-project">
                <i class="bi bi-arrow-left"></i> Retour Ã  la liste
            </a>

            <a href="{{ path('front_project_show', {'id': project.id}) }}" class="btn btn-sm btn-glass-project">
                <i class="bi bi-eye"></i> Voir le projet
            </a>
        </div>
    </div>

</div>
{% endblock %}
