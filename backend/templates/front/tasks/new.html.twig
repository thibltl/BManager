{% extends 'base_front.html.twig' %}

{% block title %}Nouvelle tâche{% endblock %}

{% block body %}
<div class="container mt-5">

    {# =========================
       HEADER (STYLE INDEX)
       ========================= #}
    <div class="page-header-modern">
        <div class="header-content">
            <div class="header-title-section">
                <h1 class="modern-title">Nouvelle tâche</h1>
                <p class="header-subtitle">
                    Projet : {{ project.projectName }}
                </p>
            </div>

            <a href="{{ path('front_tasks_by_project', { id: project.id }) }}"
               class="btn-glass">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    {# =========================
       FORM CARD (STYLE TASK)
       ========================= #}
    <div class="task-card">

        {{ include('front/tasks/_form.html.twig', {
            button_label: 'Créer',
            project: project
        }) }}

    </div>

</div>
{% endblock %}
