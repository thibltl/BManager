{% extends 'base_front.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
<div class="container mt-5">

    {# =========================
       CARD TÂCHE (STYLE INDEX)
       ========================= #}
    <div class="task-card">

        <div class="task-header">
            <div class="task-title-section">
                <strong class="task-title">{{ task.getTaskTitle() }}</strong>

                {% if task.getTaskDesc() %}
                    <small class="task-description">
                        {{ task.getTaskDesc() }}
                    </small>
                {% endif %}
            </div>

            {% if task.getTaskDueDate() %}
                <span class="task-date">
                    <i class="bi bi-calendar-event"></i>
                    {{ task.getTaskDueDate()|date('d F Y') }}
                </span>
            {% endif %}
        </div>

        {# =========================
           META (PRIORITÉ / STATUT / DATES)
           ========================= #}
        <div class="task-meta">

            {# PRIORITÉ #}
            {% if task.getTaskPriority() %}
                {% set priorityName = task.getTaskPriority().getPriorityName() %}
                {% set priorityMap = {
                    'Tres faible': 'tres-faible',
                    'Faible': 'faible',
                    'Modere': 'modere',
                    'Eleve': 'eleve',
                    'Tres eleve': 'tres-eleve'
                } %}
                {% set priorityClass = priorityMap[priorityName]|default('') %}

                <span class="priority-badge {{ priorityClass ? 'priority-' ~ priorityClass : '' }}">
                    <i class="bi bi-flag-fill"></i>
                    {{ priorityName }}
                </span>
            {% endif %}

            {# STATUT #}
            {% if task.getTaskStatus() %}
                {% set statusName = task.getTaskStatus().getStatusName() %}
                {% set statusMap = {
                    'En cours': 'en-cours',
                    'Terminee': 'termine',
                    'En retard': 'retard',
                    'En attente': 'en-attente'
                } %}
                {% set statusClass = statusMap[statusName]|default('') %}

                <span class="status-badge {{ statusClass ? 'status-' ~ statusClass : '' }}">
                    <i class="bi bi-circle-fill status-icon"></i>
                    {{ statusName }}
                </span>
            {% endif %}

            {% if task.getTaskCreatedAt() %}
                <span class="meta-pill">
                    <i class="bi bi-plus-circle"></i>
                    {{ task.getTaskCreatedAt()|date('d F Y') }}
                </span>
            {% endif %}

            {% if task.getTaskLastChange() %}
                <span class="meta-pill">
                    <i class="bi bi-pencil"></i>
                    {{ task.getTaskLastChange()|date('d F Y') }}
                </span>
            {% endif %}
        </div>

        {# =========================
           ACTIONS
           ========================= #}
        <div class="task-actions">

            <a href="{{ path('front_tasks_by_project', { id: task.taskProject.id }) }}"
               class="btn-glass btn-small">
                <i class="bi bi-arrow-left"></i> Retour
            </a>

            {% if task.getTaskProject() %}
                <a href="{{ path('front_project_show', {'id': task.taskProject.id}) }}"
                   class="btn-glass btn-small">
                    <i class="bi bi-folder2-open"></i>
                    {{ task.getTaskProject().projectName }}
                </a>
            {% endif %}

            {% if task.taskProject.users.contains(app.user) %}
                <a href="{{ path('front_tasks_edit', {'id': task.id}) }}"
                   class="btn-glass btn-small">
                    <i class="bi bi-pencil"></i> Modifier
                </a>

                {{ include('front/tasks/_delete_form.html.twig', {
                    task: task,
                    btn_class: 'btn-glass-red btn-small'
                }) }}
            {% endif %}

        </div>
    </div>

    {# =========================
       HISTORIQUE (STYLE CARD)
       ========================= #}
    <div class="task-card mt-4">

        <div class="kanban-title-t">
            <i class="bi bi-clock-history"></i>
            Historique des modifications
        </div>

        {% if task.history is not empty %}
            <div class="task-meta">
                {% for entry in task.history %}
                    <span class="meta-pill">
                        <i class="bi bi-clock"></i>
                        {{ entry.thUpdatedAt|date('d/m/Y H:i') }}
                        — {{ entry.thChangelog }}
                        {% if entry.author %}
                            ({{ entry.author.name }})
                        {% endif %}
                    </span>
                {% endfor %}
            </div>
        {% else %}
            <p class="task-description">
                Aucune modification enregistrée.
            </p>
        {% endif %}

    </div>

</div>
{% endblock %}
