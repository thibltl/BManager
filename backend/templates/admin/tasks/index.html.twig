{% extends 'base_admin.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">Liste des tâches</h1>
        <a href="{{ path('app_tasks_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouvelle tâche
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Échéance</th>
                    <th scope="col">Créée le</th>
                    <th scope="col">Dernière modification</th>
                    <th scope="col">Priorité</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Projet</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.taskTitle }}</td>
                    <td>{{ task.taskDesc }}</td>
                    <td>{{ task.taskDueDate ? task.taskDueDate|date('Y-m-d') : '' }}</td>
                    <td>{{ task.taskCreatedAt ? task.taskCreatedAt|date('Y-m-d') : '' }}</td>
                    <td>{{ task.taskLastChange ? task.taskLastChange|date('Y-m-d') : '' }}</td>
                    <td>{{ task.getTaskPriority().getPriorityName() }}</td>
                    <td>{{ task.getTaskStatus().getStatusName() }}</td>
                    <td>{{ task.getTaskProject().getProjectName() }}</td>
                    <td>
                        <a href="{{ path('app_tasks_show', {'id': task.id}) }}" class="btn btn-sm btn-outline-info me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_tasks_edit', {'id': task.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        {{ include('tasks/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10" class="text-center text-muted">Aucune tâche trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
