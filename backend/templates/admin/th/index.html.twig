{% extends 'base_admin.html.twig' %}

{% block title %}Liste des Th{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">Liste des Th</h1>
        <a href="{{ path('app_th_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nouveau Th
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Changelog</th>
                    <th scope="col">Mis à jour le</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for th in ths %}
                <tr>
                    <td>{{ th.id }}</td>
                    <td>{{ th.thChangelog }}</td>
                    <td>{{ th.thUpdatedAt ? th.thUpdatedAt|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_th_show', {'id': th.id}) }}" class="btn btn-sm btn-outline-info me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_th_edit', {'id': th.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
