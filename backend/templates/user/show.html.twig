{% extends 'base_front.html.twig' %}

{% block title %}Détail utilisateur{% endblock %}

{% block body %}
<div class="user-show">

    <table class="user-card">
        <tbody>

            <tr class="user-title">
                <td class="user-name">{{ user.name }}</td>
            </tr>

            <tr class="user-row">
                <td><strong>ID :</strong> {{ user.id }}</td>
            </tr>

            <tr class="user-row">
                <td><strong>Email :</strong> {{ user.email }}</td>
            </tr>

            <tr class="user-row">
                <td>
                    <strong>Rôles :</strong>
                    {% if user.roles is not empty %}
                        {% for role in user.roles %}
                            <span class="user-role">{{ role }}</span>
                        {% endfor %}
                    {% else %}
                        Aucun rôle
                    {% endif %}
                </td>
            </tr>

            <tr class="user-row">
                <td><strong>Créé le :</strong> {{ user.createdAt|date('d/m/Y') }}</td>
            </tr>

        </tbody>
    </table>

    <div class="user-actions">
        <a href="{{ path('user_index') }}" class="btn-user secondary">Retour</a>
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn-user primary">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>

</div>
{% endblock %}
