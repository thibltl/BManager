{% extends 'base.html.twig' %}

{% block title %}Détails Th{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <h1 class="h4 mb-0">Détails Th</h1>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ th.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Changelog</th>
                        <td>{{ th.thChangelog }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Mis à jour le</th>
                        <td>{{ th.thUpdatedAt ? th.thUpdatedAt|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_th_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <div>
                <a href="{{ path('app_th_edit', {'id': th.id}) }}" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                {{ include('th/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

